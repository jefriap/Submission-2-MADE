<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jefriap.submission2made">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.jefriap.submission2made.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Submission2MADE">
        <activity
            android:name="com.jefriap.submission2made.ui.splashscreen.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jefriap.submission2made.ui.detail.DetailActivity"
            android:exported="false" />
        <activity
            android:name="com.jefriap.submission2made.ui.MainActivity"
            android:exported="false"/>
    </application>

</manifest>